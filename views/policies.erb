<% content_for :head do %>
  <link rel='stylesheet' href='/css/policies.css'>
<% end %>

<h1>Apólices</h1>

<% if policies.length > 0 %>
  <table>
  <tr>
    <th>ID</th>
    <th>Nome</th>
    <th>Placa</th>
    <th>Emissão</th>
    <th>Fim da cobertura</th>
    <th></th>
  </tr>
  <% policies.each do |policy| %>
    <tr>
      <td><%= policy['id'] %></td>
      <td><%= policy['insured']['name'] %></td>
      <td><%= policy['vehicle']['licensePlate'] %></td>
      <td><%= policy['effectiveFrom'] %></td>
      <td><%= policy['effectiveUntil'] %></td>
      <td><a href='/policies/<%= policy['id'] %>'>Detalhes</a></td>
    </tr>
  <% end %>
</table>
<% else %>
  <p>Nenhuma apólice encontrada</p>
<% end %>
